{
  "plugins": [
    "prettier-plugin-tailwindcss"
  ],
  "singleQuote": true,
  "trailingComma": "all",
  "semi": false,
  "jsxSingleQuote": true,
  "useTabs": true,
  "bracketSameLine": true,
  "arrowParens": "always",
  "tabWidth": 2,
  "bracketSpacing": true,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "^@entities/(.*)$",
    "^@shared/(.*)$",
    "^[./]"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}